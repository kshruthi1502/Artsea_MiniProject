package artsea_proj;
import java.awt.*;
import javax.swing.*;
import java.awt.event.*;
public class trailbg  {

	Label ll;
		//Reserve r;
	JButton gallery,artist,painting,customer;
	JFrame frame;
	trailbg()
	{

	Label	ll = new Label();
	frame =new JFrame("ART_SEA");
		ll.setAlignment(Label.CENTER);
		ll.setBounds(110,250,500,200);
		ll.setFont(new Font("Arial",Font.BOLD,40));
		ll.setText("ART SEA");
		frame.add(ll);
		gallery = new JButton("Gallery");
		artist = new JButton("Artist");
		painting= new JButton("Painting");
		customer=new JButton("Customer");
		Panel p=new Panel(new GridLayout(4,1));
		p.add(gallery);
		p.add(artist);
		p.add(painting);
		p.add(customer);
		p.setBounds(5,30,200,100);
		frame.add(p);
		/*item1.addActionListener(this);
		item2.addActionListener(this);
		item3.addActionListener(this);*/
		frame.addWindowListener(new WindowAdapter(){
		public void
		windowClosing(WindowEvent we)
		{
			System.exit(0);
		}
	});
	//Color clr = new Color(255,0,0);
	frame.getContentPane().setBackground(new Color(125,193,232));
	frame.setFont(new Font("SansSerif",Font.BOLD,14));
	frame.setLayout(null);
	frame.setSize(700, 700);
	frame.setVisible(true);
	
		gallery.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				frame.getContentPane().removeAll();
				new Gallery(frame);
			}
		});
		artist.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				frame.getContentPane().removeAll();
		//		new Artist(frame,);
			}
		});
}
public static void main(String args[])
{
	new trailbg();
}
}
	
	

